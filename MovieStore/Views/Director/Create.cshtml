@model MovieStore.Data.Entities.Director

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create new Director</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"  method="post"   name="directorcreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Popularity" class="control-label"></label>
                @*<input type="checkbox" name="Popularity" value="Popularity">*@
                <select asp-for="Popularity">
            <option value="True">True</option>
            <option value="False">False</option>
        </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

